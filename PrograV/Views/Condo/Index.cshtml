@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <!DOCTYPE html>
    <html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            @* <a class="btn btn-primary asp-area" asp-controller="Condo" asp-action="Create"> "Add condominium" </a> *@
            <div class="row justify-content-center">
                @foreach(var condominium in ViewBag.Condominium)
                    {
                    <div class="col-md-6">

                                <div class="card shadow-lg p-4">
                                <img src="@condominium.Photo">
                                <h2 class="text-center mt-5">@condominium.Name</h2>
                                <h2 class="text-center mt-5">@condominium.Count</h2>
                                <h2 class="text-center mt-5">@condominium.Address</h2>
                            
                            </div>
                                                
                    </div>
                }
            </div>
            <a class="btn btn-primary asp-area" asp-controller="Condo" asp-action="Create"> Add condominium </a>
            <a class="btn btn-primary asp-area" asp-controller="Admin" asp-action="Index"> Volver </a>
        </div>
    </body>
</html>
   
</div>
