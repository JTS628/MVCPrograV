																<input type="hidden" name="photo" value="@condominium.Photo">
																<input type="hidden" name="name" value="@condominium.Name">
																<input type="hidden" name="count" value="@condominium.Count">
																<input type="hidden" name="address" value="@condominium.Address">
																<button class="button primary" type="submit" >Editar</button>
