<!DOCTYPE HTML>

<html>
<head>
	<title> Owner page Two Column 1 - Halcyonic by HTML5 UP</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="~/HTML5UP/assets/css/main.css" />
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<style>
		table.full-width {
			width: 100%;
			border-collapse: collapse;
		}

			table.full-width th, table.full-width td {
				padding: 10px;
				border: 1px solid #ddd;
				text-align: left;
			}

		.table-wrapper {
			overflow-x: auto;
		}
	</style>
</head>
<body class="subpage">
	<div id="page-wrapper">

		<!-- Header -->
		<section id="header">
			<div class="container">
				<div class="row">
					<div class="col-12">

						<!-- Logo -->
						

						<!-- Nav -->
						<nav id="nav">
							<a href="index.html">Homepage</a>
							<a href="threecolumn.html">Three Column</a>
							<a href="twocolumn1.html">Two Column #1</a>
							<a href="twocolumn2.html">Two Column #2</a>
							<a href="onecolumn.html">One Column</a>
						</nav>

					</div>
				</div>
			</div>
		</section>

		<!-- Content -->
		@if (TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-success" role="alert">
				@TempData["SuccessMessage"]
			</div>
		}

		

		<section id="content">
			<div class="container">
				<div class="row">
					<div class="col-9 col-12-medium">

						<!-- Main Content -->
						<section>
							<div class="table-wrapper">
								<table class="full-width">
									<thead>
										<tr>
											<th>Visitante</th>
											<th>Cédula</th>
											<th>Marca Vehículo</th>
											<th>Modelo</th>
											<th>Color</th>
											<th>Placa</th>
											<th>Fecha de Visita</th>
											<th>Acciones</th>
										</tr>
									</thead>
									<tbody>
										@if (ViewBag.VisitList != null && ViewBag.VisitList.Count > 0)
										{
											foreach (var visit in ViewBag.VisitList)
											{
												<tr>
													<td>@visit.nombre</td>
													<td>@visit.cedula</td>
													<td>@visit.marcavehiculo</td>
													<td>@visit.modelo</td>
													<td>@visit.color</td>
													<td>@visit.placa</td>
													<td>@visit.fecha</td>
													<td>
														<form method="post" asp-action="EditVisit" asp-controller="Owner">

															<input type="hidden" name="nombre" value="@visit.nombre">
															<input type="hidden" name="cedula" value="@visit.cedula">
															<input type="hidden" name="marcavehiculo" value="@visit.marcavehiculo">
															<input type="hidden" name="modelo" value="@visit.modelo">
															<input type="hidden" name="color" value="@visit.color">
															<input type="hidden" name="placa" value="@visit.placa">
															<input type="hidden" name="fecha" value="@visit.fecha">
															<input type="hidden" name="id" value="@visit.id">
														  <button class ="button primary" type="submit">Actualizar Visita</button>
														</form>
														<a asp-action="DeleteVisit" asp-controller="Owner" asp-route-id="@visit.id" class="button primary ">Eliminar Visita</a>


													</td>
												</tr>
											}
										}
										else
										{
											<tr>
												<td colspan="7" style="text-align:center; color:red;">No owners found.</td>
											</tr>
										}
									</tbody>
								</table>
								<div class="text-end">
									<a class="btn btn-primary" asp-action="Index" asp-controller="Owner">Volver</a>
								</div>

							</div>
						</section>

					</div>
					
				</div>
			</div>
		</section>

		<!-- Footer -->
		<section id="footer">
			<div class="container">
